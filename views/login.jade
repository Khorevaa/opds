extends layout

block content
    h1= title
    h2 Войдите или зарегистрируйтесь!
    p Если вы еще не регистрировались логин и пароль будут созданы впервые.
        form.form-horizontal.login-form(name='login-form')
            .form-group
                label.col-lg-2.control-label(for='input-username') Имя
                .col-lg-10
                    input#input-username.form-control(name='username', value='name', type='text', placeholder='Имя' required)
            .form-group
                label.col-lg-2.control-label(for='input-password') Пароль
                .col-lg-10
                    input#input-password.form-control(name='password', value='password', type='password', placeholder='Пароль' required)
            .form-group
                .col-lg-offset-2.col-lg-10
                    button.btn.btn-primary(type='submit', data-loading-text='Отправляю...') Войти
                    span.help-block.error
        script.
            $(document.forms['login-form']).on('submit', function () {
                var form = $(this);

                $('.error', form).html('');
                $(':submit', form).button('loading');

                $.ajax({
                    url: '/login',
                    method: 'POST',
                    data: form.serialize(),
                    complete: function () {
                        $(':submit', form).button('reset');
                    },
                    statusCode: {
                        200: function () {
                            form.html('Вы вошли в кабинет').addClass('alert-success');
                            window.location.href = '/cabinet';
                        },
                        403: function (jqXHR) {
                            var error = JSON.parse(jqXHR.responseText);
                            $('.error', form).html(error.message);
                        }
                    }
                });
                return false;
            });